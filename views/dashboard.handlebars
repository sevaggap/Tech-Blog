<div>
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="mt-4">
  <div class="col-md-6">
    <h3>Your Dashboard</h3>
  </div>
<br>
  {{#if posts.length}}
  <div class="col-md-6 post-list">
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/api/posts/edit/{{post.id}}">{{post.title}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <div class="text-center">
        <h4><a href="/api/posts/create">Create Post</a></h4>
  </div>

</div>

<script src="/js/dashboard.js"></script>
